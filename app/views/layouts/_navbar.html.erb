<% if notice.present? or alert.present? %>
  <div role="alert" class="alert alert-dismissible" style="z-index: 200;">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <span><%= notice %></span>
    <span><%= alert %></span>
    <div>
      <button class="btn btn-sm close-alert">close</button>
    </div>
  </div>
<% end %>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const closeButton = document.querySelector('.close-alert');
        const alertDiv = document.querySelector('.alert-dismissible');

        if (closeButton && alertDiv) {
            closeButton.addEventListener('click', function() {
                alertDiv.classList.add('slide-up');

                // Remove the alert from the DOM after the animation completes
                alertDiv.addEventListener('animationend', function() {
                    alertDiv.remove();
                });
            });
        }
    });
    $(document).on('change', '#dark-mode-checkbox', function() {
        var enableDark = $(this).is(':checked');
        console.log('darkmode:', enableDark )
        $.ajax({
            url: '/dark_mode', // Replace with your route to the controller action
            method: 'POST', // Use POST method to send data
            data: { dark_mode: enableDark },
            success: function(response) {
                console.log('Dark mode set successfully');
            },
            error: function(xhr, status, error) {
                console.error('Error setting dark mode:', error);
            }
        });
    });
</script>