
<div class="login-card">

  <div class="card card-side bg-base-100 shadow-xl">
    <figure>
      <%= image_tag 'Welcome.png', alt: 'Relax', class: 'your-css-class' %>
    </figure>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name))  do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full max-w-xs", placeholder: "Email" %>
        </div>

        <div class="field mt-4">
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input input-bordered w-full max-w-xs", placeholder: "Username" %>
        </div>

        <div class="field mt-4">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full max-w-xs", placeholder: "Password" %>
        </div>

        <div class="actions mt-6">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>

      <% end %>


    </div>
  </div>
</div>
